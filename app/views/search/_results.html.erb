  <div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title" id="results">Displaying <%= @results.size %> Results</h3>
    </div>
    <div class="panel-body">
      <div class="list-group">
		  <% @results.each_with_index do |result, index| %>
        <div class="list-group-item ">
            <h4 class="list-group-item-heading"><%= index + 1 %> - <%= result.title %> </h4>
          <ul class="list-group active">
            <li class="list-group-item">Album: <%= result.album.title %></li>
            <li class="list-group-item">Artist: <%= result.album.artist.name %></li>
          </ul>
        </div>
		  <% end %>
      </div>
    </div>
  </div>
