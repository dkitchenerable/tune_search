
<form role="form" class="form-horizontal" method="POST" action="search">
  <div class ="form-group">
    <label class="control-label col-sm-4">Song Title</label>
    <div class="col-sm-6">
        <input class="form-control" type="text" name="search[title]"/>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-4">Album Title</label>
    <div class="col-sm-6">
        <input class="form-control" type="text" name="search[album_title]"/>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-4">Artist Name</label>
    <div class="col-sm-6">
        <input class="form-control" type="text" name="search[artist_name]"/>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-6 pull-right">
        <button class="btn btn-primary" type="submit"/>Search</button>
    </div>
  </div>  
</form>
